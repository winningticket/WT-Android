<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@drawable/custom_alert_pop"
    android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="@dimen/big_big_text"
            android:paddingRight="@dimen/big_big_text"
            android:paddingBottom="@dimen/edt_marg_right"
            android:paddingTop="@dimen/medium_big_textsize"
            android:id="@+id/title"
            android:text="Complete setup"
            android:textSize="@dimen/medium_big_textsize"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/text_msg"
            android:textSize="@dimen/btn_txt_size"
            android:paddingLeft="@dimen/big_big_text"
            android:paddingRight="@dimen/big_big_text"
            android:paddingBottom="@dimen/edt_marg_right"
            android:text="@string/Alert_text"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_marginBottom="@dimen/gross_score_text"/>

        <TextView
            android:layout_width="match_parent"
            android:background="@color/LightGrey"
            android:layout_height="0.8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="@dimen/large_text_size"
            android:padding="@dimen/edt_marg_right"
            android:id="@+id/btn_alert_ok"
            android:layout_marginTop="@dimen/aboutus_padding"
            android:text="Ok"
            android:textColor="@color/wallet_holo_blue_light" />

        <View
            android:layout_width="0.3dp"
            android:layout_height="fill_parent"
            android:background="@color/LightGrey" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/large_text_size"
            android:padding="@dimen/edt_marg_right"
            android:id="@+id/btn_alert_cancel"
            android:layout_marginTop="@dimen/aboutus_padding"
            android:text="Cancel"
            android:textColor="@color/wallet_holo_blue_light" />

    </LinearLayout>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>