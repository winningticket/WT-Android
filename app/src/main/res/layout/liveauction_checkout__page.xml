<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorwhite"
    tools:context="com.winningticketproject.in.Fragments.Checkout_Page">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/custome_purchage" />


    <ScrollView
        android:scrollbars="none"
        android:id="@+id/sroll_checkout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_margin="@dimen/txt_margin_lr"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_marginRight="@dimen/settings_padding"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/winning_ticket"
                        android:textStyle="bold"
                        android:padding="@dimen/text_icon_padding"
                        android:textColor="@color/colorblack"
                        android:text="@string/silent_auction"
                        android:textSize="@dimen/header_text_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/wining_title"
                        android:textStyle="bold"
                        android:padding="@dimen/text_icon_padding"
                        android:textColor="@color/colorblack"
                        android:textSize="@dimen/text_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/winning_code"
                        android:padding="@dimen/text_icon_padding"
                        android:textColor="@color/colorblack"
                        android:textSize="@dimen/custom_txt_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_marginRight="@dimen/forgot_edt_pdg"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/ticket_qyantity"
                        android:layout_gravity="right"
                        android:layout_weight="0"
                        android:textStyle="bold"
                        android:padding="@dimen/text_icon_padding"
                        android:textColor="@color/colorblack"
                        android:textSize="@dimen/header_text_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                    <TextView
                        android:id="@+id/winning_amount"
                        android:layout_gravity="center"
                        android:maxLength="12"
                        android:layout_weight="0"
                        android:textStyle="bold"
                        android:padding="@dimen/text_icon_padding"
                        android:textColor="@color/colorblack"
                        android:textSize="@dimen/text_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_marginTop="@dimen/aboutus_padding"
                android:layout_marginBottom="@dimen/aboutus_padding"
                android:layout_marginRight="@dimen/aboutus_padding"
                android:layout_marginLeft="@dimen/aboutus_padding"
                android:background="@color/colorgray"
                android:layout_width="match_parent"
                android:layout_height="1dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_margin="@dimen/aboutus_padding"
        android:paddingTop="@dimen/aboutus_padding"
        android:paddingBottom="@dimen/aboutus_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/winnig_sub_total"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textColor="@color/colorblack"
            android:textSize="@dimen/text_size"
            android:text="@string/subtotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/aboutus_padding"
            android:gravity="center|right"
            android:id="@+id/subtotal"
            android:layout_weight="1"
            android:textSize="@dimen/text_size"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorblack"/>
    </LinearLayout>


            <View
                android:layout_marginTop="@dimen/aboutus_padding"
                android:layout_marginBottom="@dimen/aboutus_padding"
                android:layout_marginRight="@dimen/aboutus_padding"
                android:layout_marginLeft="@dimen/aboutus_padding"
                android:background="@color/colorgray"
                android:layout_width="match_parent"
                android:layout_height="1dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_margin="@dimen/aboutus_padding"
        android:layout_width="match_parent"
        android:paddingTop="@dimen/aboutus_padding"
        android:paddingBottom="@dimen/aboutus_padding"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/wining_amount"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textColor="@color/colorblack"
            android:textSize="@dimen/text_size"
            android:text="@string/total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/aboutus_padding"
            android:gravity="center|right"
            android:id="@+id/totla"
            android:layout_weight="1"
            android:textSize="@dimen/text_size"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorblack"/>
    </LinearLayout>

    <Button
        android:stateListAnimator="@null"
        android:id="@+id/preview_order"
        android:layout_marginLeft="@dimen/login_margin"
        android:layout_marginRight="@dimen/login_margin"
        android:layout_marginTop="@dimen/settings_padding"
        android:text="@string/checkout"
        android:textSize="@dimen/text_size"
        android:textColor="@color/colorwhite"
        android:background="@drawable/button_backgound"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        />
    </LinearLayout>

</ScrollView>

</LinearLayout>

</FrameLayout>
</android.support.design.widget.CoordinatorLayout>