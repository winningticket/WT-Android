<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:padding="@dimen/medium_big_textsize"
    android:background="@color/setting_page"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <TextView
            android:id="@+id/payment_smartphone_title"
            android:textColor="@color/colorblack"
            android:textSize="@dimen/text_size"
            android:text="Are your purchasing a ticket for someone without smartphone?"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="@dimen/edt_paddingleft"
            android:id="@+id/payment_smartphone_subtitle"
            android:textColor="@color/colorblack"
            android:textSize="@dimen/linear_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:weightSum="6"
            android:padding="@dimen/aboutus_padding"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_1"
                android:layout_margin="@dimen/aboutus_padding"
                android:background="@drawable/editext_baground"
                android:layout_weight="1"
                android:textSize="@dimen/text_size"
                android:text="1"
                android:layout_width="0dp"
                android:layout_height="45dp" />

            <Button
                android:id="@+id/btn_2"
                android:layout_margin="@dimen/aboutus_padding"
                android:background="@drawable/editext_baground"
                android:layout_weight="1"
                android:textSize="@dimen/text_size"
                android:text="2"
                android:layout_width="0dp"
                android:layout_height="45dp" />

            <Button
                android:id="@+id/btn_3"
                android:layout_margin="@dimen/aboutus_padding"
                android:background="@drawable/editext_baground"
                android:layout_weight="1"
                android:textSize="@dimen/text_size"
                android:text="3"
                android:layout_width="0dp"
                android:layout_height="45dp" />

            <Button
                android:id="@+id/btn_4"
                android:layout_margin="@dimen/aboutus_padding"
                android:background="@drawable/editext_baground"
                android:layout_weight="1"
                android:textSize="@dimen/text_size"
                android:text="4"
                android:layout_width="0dp"
                android:layout_height="45dp"/>

            <Button
                android:id="@+id/btn_5"
                android:layout_margin="@dimen/aboutus_padding"
                android:background="@drawable/editext_baground"
                android:layout_weight="1"
                android:textSize="@dimen/text_size"
                android:text="5"
                android:layout_width="0dp"
                android:layout_height="45dp"/>

            <Button
                android:id="@+id/btn_6"
                android:layout_margin="@dimen/aboutus_padding"
                android:background="@drawable/editext_baground"
                android:layout_weight="1"
                android:textSize="@dimen/text_size"
                android:text="6"
                android:layout_width="0dp"
                android:layout_height="45dp"/>

        </LinearLayout>

        <Button
            android:id="@+id/btn_checkout"
            android:textColor="@color/colorwhite"
            android:background="@color/public_color"
            android:text="@string/check_out"
            android:textSize="@dimen/text_size"
            android:layout_margin="@dimen/text_size"
            android:layout_marginTop="@dimen/edt_paddingleft"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

</LinearLayout>