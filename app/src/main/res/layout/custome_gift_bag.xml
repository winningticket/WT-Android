<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:weightSum="2"
    android:orientation="horizontal"
    android:layout_margin="@dimen/aboutus_padding"
    android:padding="@dimen/aboutus_padding"
    android:background="@color/colorwhite"
    android:id="@+id/layoyt4"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_weight="0"
        android:layout_width="@dimen/live_auction_width"
        android:layout_height="match_parent">
        <ImageView
            android:padding="1dp"
            android:scaleType="fitXY"
            android:id="@+id/gift_bag_iamge"
            android:layout_width="@dimen/live_auction_width"
            android:layout_height="@dimen/live_auction_width" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/aboutus_padding"
        android:layout_gravity="top"
        android:layout_weight="2"
        android:layout_marginLeft="@dimen/aboutus_padding"
        android:layout_marginRight="@dimen/text_icon_padding"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <TextView
            android:maxLines="2"
            android:id="@+id/title_gift_bag"
            android:textColor="@color/colorblack"
            android:textSize="@dimen/header_text_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="@dimen/edt_paddingbtm"
            android:layout_marginBottom="@dimen/edt_paddingbtm"
            android:layout_marginLeft="@dimen/edt_paddingleft"
            android:id="@+id/offere_date"
            android:gravity="left"
            android:textColor="@color/colorblack"
            android:textSize="@dimen/custom_txt_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:stateListAnimator="@null"
            android:layout_marginTop="@dimen/editext_bottom"
            android:id="@+id/view_offer"
            android:layout_width="@dimen/view_item_width"
            android:layout_height="@dimen/view_item_hitght"
            android:layout_gravity="center"
            android:background="@drawable/button_backgound"
            android:padding="@dimen/aboutus_padding"
            android:text="@string/view_offer"
            android:textColor="@color/colorwhite"
            android:textSize="@dimen/text_size" />

    </LinearLayout>
</LinearLayout>
</android.support.design.widget.CoordinatorLayout>