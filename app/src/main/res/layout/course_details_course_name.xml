<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_margin="@dimen/aboutus_padding"
    android:padding="@dimen/edt_paddingleft"
    android:background="@drawable/course_item_bg"
    android:animateLayoutChanges="true"
    android:layout_height="wrap_content">

        <TextView
            android:minLines="2"
            android:maxLines="2"
            android:gravity="center|start"
            android:layout_gravity="center|start"
            android:id="@+id/tv_course_name"
            android:textSize="@dimen/text_size"
            android:textColor="@color/colorblack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_course_location_name"
            android:textSize="@dimen/linear_medium"
            android:textColor="@color/colorblack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:gravity="start"
            android:id="@+id/tv_course_distance_miles"
            android:textSize="@dimen/linear_medium"
            android:textColor="@color/colorblack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

</LinearLayout>