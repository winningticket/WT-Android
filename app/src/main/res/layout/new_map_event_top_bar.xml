<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:padding="@dimen/aboutus_padding"
    android:gravity="center"
    android:weightSum="4"
    android:layout_gravity="top"
    android:background="@color/colorwhite"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:textSize="@dimen/small_text"
            android:id="@+id/btn_gps"
            android:textColor="@color/colorwhite"
            android:layout_margin="@dimen/aboutus_padding"
            android:layout_weight=".6"
            android:background="@drawable/gps_top_bar_color"
            android:text="@string/text_gps"
            android:layout_width="0dp"
            android:layout_height="@dimen/pro_logo_width"/>

        <TextView
            android:textColor="@color/colorblack"
            android:textSize="@dimen/linear_medium"
            android:id="@+id/tv_course_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/aboutus_padding"
            android:layout_weight="2.8"
            android:gravity="center"/>

        <Button
            android:layout_gravity="center"
            android:textSize="@dimen/small_text"
            android:textAlignment="gravity"
            android:id="@+id/btn_leader_board"
            android:textColor="@color/colorblack"
            android:gravity="center"
            android:textAllCaps="false"
            android:layout_margin="@dimen/aboutus_padding"
            android:layout_weight=".6"
            android:background="@drawable/leader_board_bar_color"
            android:text="Leader\n Board"
            android:layout_width="0dp"
            android:layout_height="@dimen/pro_logo_width"/>

    </LinearLayout>

    <include layout="@layout/layout_auction_chat"/>

    <ImageView
        android:visibility="gone"
        android:id="@+id/image_view_leaderboard"
        android:src="@drawable/full_leader_board"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pro_logo_width"/>


</LinearLayout>