<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/setting_page"
    android:orientation="vertical"
    android:padding="@dimen/medium_big_textsize"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginStart="@dimen/aboutus_padding"
                android:id="@+id/home_icon"
                android:textSize="@dimen/_big_header_text_size"
                android:textColor="@color/colorblack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/f015"/>

            <TextView
                android:layout_marginStart="@dimen/aboutus_padding"
                android:id="@+id/billing_address"
                android:textColor="@color/colorblack"
                android:text="@string/billing_address"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <TextView
            android:layout_weight="1"
            android:gravity="end"
            android:layout_marginEnd="@dimen/aboutus_padding"
            android:id="@+id/full_address_payment"
            android:textColor="@color/colorblack"
            android:textSize="@dimen/text_size"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="@dimen/aboutus_padding"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginStart="@dimen/aboutus_padding"
                android:id="@+id/card_icon"
                android:textSize="@dimen/_big_header_text_size"
                android:textColor="@color/colorblack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/f09d"/>

            <TextView
                android:layout_marginStart="@dimen/aboutus_padding"
                android:id="@+id/payment_method"
                android:textColor="@color/colorblack"
                android:text="@string/payment_method"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <TextView
            android:layout_weight="1"
            android:gravity="end"
            android:layout_marginEnd="@dimen/aboutus_padding"
            android:id="@+id/payment_detials"
            android:textColor="@color/colorblack"
            android:textSize="@dimen/text_size"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>