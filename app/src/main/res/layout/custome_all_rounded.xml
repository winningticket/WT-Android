<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/row_list"
        android:background="@color/colorwhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_margin="@dimen/aboutus_padding"
            android:background="@drawable/courses_empty"
            android:layout_width="@dimen/logo_icon_hight"
            android:layout_height="@dimen/logo_icon_hight"
            android:id="@+id/courses_image"
            android:layout_gravity="center|left" />

        <TableRow
            android:layout_gravity="center"
            android:padding="@dimen/aboutus_padding"
            android:id="@+id/table_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center|left"
                android:layout_gravity="center|left"
                android:orientation="vertical"
                android:id="@+id/layout_event_date"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:text="Poinacia Country Club"
                    android:gravity="left|center"
                    android:layout_gravity="center|left"
                    android:textColor="@color/colorblack"
                    android:textSize="@dimen/text_size"
                    android:id="@+id/text_course_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:gravity="start|center"
                    android:layout_gravity="start|center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_gravity="center|start"
                        android:gravity="start|center"
                        android:id="@+id/text_course_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorblack"
                        android:textSize="@dimen/small_to_medium_text" />

                    <TextView
                        android:layout_marginStart="@dimen/text_size"
                        android:id="@+id/text_course_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/score_color"
                        android:textSize="@dimen/small_to_medium_text" />
                </LinearLayout>

                <TextView
                    android:gravity="start|center"
                    android:layout_gravity="center|start"
                    android:textColor="@color/colorblack"
                    android:textSize="@dimen/linear_small"
                    android:id="@+id/text_last_played"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


                <TextView
                    android:gravity="start|center"
                    android:layout_gravity="center|start"
                    android:textColor="@color/colorblack"
                    android:textSize="@dimen/linear_small"
                    android:id="@+id/text_tee_hole"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </TableRow>
    </LinearLayout>
</LinearLayout>