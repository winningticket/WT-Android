<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:background="@color/colorwhite"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_margin="@dimen/edt_paddingleft"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/services">
         <ImageView
             android:layout_width="@dimen/image_width"
             android:layout_height="@dimen/filteer_width"
             android:background="@drawable/logo"
             android:layout_gravity="center" />
         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:id="@+id/location_services"
             android:text="@string/start_a_new_round"
             android:layout_marginTop="@dimen/_5sdp"
             android:textColor="@color/colorblack"
             android:textAlignment="center"
             android:textStyle="bold"
             android:textSize="@dimen/txt_heading_size"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/st_round_nearby_courses"
            android:textAlignment="center"
            android:layout_marginTop="7dp"
            android:textSize="@dimen/text_size"/>

        <Button
            android:textSize="@dimen/text_size"
            android:stateListAnimator="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/start_round"
            android:id="@+id/enable"
            android:textColor="@color/colorwhite"
            android:background="@drawable/new_bottom_bg"
            android:layout_marginLeft="@dimen/mar_left_fifthyt"
            android:layout_marginRight="@dimen/mar_left_fifthyt"
            android:layout_marginTop="@dimen/edt_marg_right"
            android:layout_marginBottom="@dimen/aboutus_padding"/>
        <Button
            android:textSize="@dimen/text_size"
            android:stateListAnimator="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:id="@+id/not_now"
            android:textAllCaps="false"
            android:background="@color/colorwhite"
            android:textColor="@color/colorblack"
            android:layout_marginLeft="@dimen/mar_left_fifthyt"
            android:layout_marginRight="@dimen/mar_left_fifthyt"
            android:layout_marginTop="@dimen/aboutus_padding"
            android:layout_marginBottom="@dimen/mar_left_fifthyt"/>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>