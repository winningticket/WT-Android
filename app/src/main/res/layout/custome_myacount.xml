<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/settings_padding"
        android:gravity="center">

        <TextView
            android:layout_centerInParent="true"
            android:id="@+id/all_icons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:padding="@dimen/txt_margin_lr"
            android:textColor="@color/colorblack"
            android:textSize="@dimen/big_text_size" />


        <TextView
            android:layout_centerInParent="true"
            android:id="@+id/textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/all_icons"
            android:layout_marginStart="@dimen/account_row_left"
            android:gravity="left|center"
            android:padding="@dimen/txt_margin_lr"
            android:textColor="@color/colorblack"
            android:textSize="@dimen/text_size" />

        <TextView
            android:layout_centerInParent="true"
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="@dimen/edit_text_top"
            android:textColor="@color/colorblack"
            android:textSize="@dimen/big_big_text" />
    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>