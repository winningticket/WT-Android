<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:padding="@dimen/edt_paddingleft"
    android:background="@color/colorlightplusgray"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_scoring_legend"
        android:gravity="center"
        android:textColor="@color/colorblack"
        android:text="@string/scoring_legend"
        android:padding="@dimen/aboutus_padding"
        android:textSize="@dimen/text_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:padding="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:weightSum="5"
        android:layout_marginBottom="@dimen/edt_marg_right"
        android:layout_marginTop="@dimen/edt_marg_right"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton
                android:background="@color/eadges"
                android:layout_width="8dp"
                android:layout_height="8dp" />
            <TextView
                android:id="@+id/tv_eglae"
                android:textColor="@color/colorblack"
                android:textSize="@dimen/ss_text"
                android:layout_marginStart="@dimen/_3sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/eadge"/>
        </LinearLayout>


        <LinearLayout
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginStart="@dimen/_5sdp"
                android:background="@color/birdie" />
            <TextView
                android:id="@+id/tv_bride"
                android:textColor="@color/colorblack"
                android:textSize="@dimen/ss_text"
                android:layout_marginStart="@dimen/_3sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/birdie"/>
        </LinearLayout>


        <LinearLayout
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton
                android:layout_marginStart="@dimen/_5sdp"
                android:background="@color/bogey"
                android:layout_width="8dp"
                android:layout_height="8dp" />
            <TextView
                android:id="@+id/tv_bogey"
                android:textColor="@color/colorblack"
                android:textSize="@dimen/ss_text"
                android:layout_marginStart="@dimen/_3sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bogey"/>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton
                android:layout_marginStart="@dimen/_5sdp"
                android:background="@color/double_bogey"
                android:layout_width="8dp"
                android:layout_height="8dp" />
            <TextView
                android:id="@+id/tv_double_bogey"
                android:textColor="@color/colorblack"
                android:textSize="@dimen/ss_text"
                android:layout_marginStart="@dimen/_3sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/double_bogey"/>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:layout_marginStart="@dimen/_5sdp"
                android:background="@drawable/choose_color"
                android:layout_width="8dp"
                android:layout_height="8dp" />

            <TextView
                android:id="@+id/tv_choosen_color"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/colorblack"
                android:textSize="@dimen/ss_text"
                android:layout_marginStart="@dimen/_3sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/chosen_color"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>