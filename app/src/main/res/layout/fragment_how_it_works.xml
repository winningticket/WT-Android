                    android:gravity="center"
                    android:layout_width="@dimen/how_it_works_text"
                    android:layout_height="wrap_content"
                    android:text="@string/create_verified_account"/>
            </LinearLayout>
            <ImageView
                android:layout_marginRight="@dimen/aboutus_padding"
                android:layout_gravity="center|top"
                android:layout_marginTop="@dimen/how_it_works_margin_top"
                android:layout_marginLeft="@dimen/aboutus_padding"
                android:background="@drawable/hit_arrow"
                android:layout_width="@dimen/arrow_icon"
                android:layout_height="@dimen/arrow_icon" />
            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="@dimen/how_it_works_cions"
                    android:layout_height="@dimen/how_it_works_cions"
                    android:background="@drawable/hit_8"/>
                <TextView
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/edt_hint_margin"
                    android:id="@+id/hit_text8"
                    android:textSize="@dimen/custom_txt_size"
                    android:textColor="@color/colorblack"
                    android:gravity="center"
                    android:layout_width="@dimen/how_it_works_text"
                    android:layout_height="wrap_content"
                    android:text="@string/donate_cash_and_prizes"/>
            </LinearLayout>
            <ImageView
                android:layout_marginRight="@dimen/aboutus_padding"
                android:layout_gravity="center|top"
                android:layout_marginTop="@dimen/how_it_works_margin_top"
                android:layout_marginLeft="@dimen/aboutus_padding"
                android:background="@drawable/hit_arrow"
                android:layout_width="@dimen/arrow_icon"
                android:layout_height="@dimen/arrow_icon" />

            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="@dimen/how_it_works_cions"
                    android:layout_height="@dimen/how_it_works_cions"
                    android:background="@drawable/hit_9"/>
                <TextView
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/edt_hint_margin"
                    android:id="@+id/hit_text9"
                    android:textSize="@dimen/custom_txt_size"
                    android:textColor="@color/colorblack"
                    android:gravity="center"
                    android:layout_width="@dimen/how_it_works_text"
                    android:layout_height="wrap_content"
                    android:text="@string/choose_events_you_want_to_sponsor"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
    </LinearLayout>
</LinearLayout>
</android.support.design.widget.CoordinatorLayout>