<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/colorwhite">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/how_it_works"
            layout="@layout/custome_profile_toolbarpage" />
        <ScrollView
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
        <TextView
            android:padding="@dimen/aboutus_padding"
            android:layout_margin="@dimen/aboutus_padding"
            android:gravity="center"
            android:layout_below="@+id/how_it_works"
            android:id="@+id/charity_text"
            android:textColor="@color/colorbtn"
            android:textSize="@dimen/header_text_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:id="@+id/acoutn_carity_icon"
            android:layout_margin="@dimen/aboutus_padding"
            android:weightSum="3"
            android:layout_below="@+id/charity_text"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="@dimen/how_it_works_cions"
                    android:layout_height="@dimen/how_it_works_cions"
                    android:background="@drawable/hit_1"/>
                <TextView
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/edt_hint_margin"
                    android:id="@+id/hit_text1"
                    android:textSize="@dimen/custom_txt_size"
                    android:textColor="@color/colorblack"
                    android:gravity="center"
                    android:layout_width="@dimen/how_it_works_text"
                    android:layout_height="wrap_content"
                    android:text="@string/customize_event"/>
            </LinearLayout>
            <ImageView
                android:layout_marginRight="@dimen/aboutus_padding"
                android:layout_gravity="center|top"
                android:layout_marginTop="@dimen/how_it_works_margin_top"
                android:layout_marginLeft="@dimen/aboutus_padding"
                android:background="@drawable/hit_arrow"
                android:layout_width="@dimen/arrow_icon"
                android:layout_height="@dimen/arrow_icon" />
            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="@dimen/how_it_works_cions"
                    android:layout_height="@dimen/how_it_works_cions"
                    android:background="@drawable/hit_2"/>

                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/hit_text2"
                    android:layout_width="@dimen/how_it_works_text"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/edt_hint_margin"
                    android:gravity="center"
                    android:text="@string/distribute_nevent_code"
                    android:textColor="@color/colorblack"
                    android:textSize="@dimen/custom_txt_size" />
            </LinearLayout>
            <ImageView
                android:layout_marginRight="@dimen/aboutus_padding"
                android:layout_gravity="center|top"
                android:layout_marginTop="@dimen/how_it_works_margin_top"
                android:layout_marginLeft="@dimen/aboutus_padding"
                android:background="@drawable/hit_arrow"
                android:layout_width="@dimen/arrow_icon"
                android:layout_height="@dimen/arrow_icon" />

            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="@dimen/how_it_works_cions"
                    android:layout_height="@dimen/how_it_works_cions"
                    android:background="@drawable/hit_3"/>
                <TextView
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/edt_hint_margin"
                    android:id="@+id/hit_text3"
                    android:textSize="@dimen/custom_txt_size"
                    android:textColor="@color/colorblack"
                    android:gravity="center"
                    android:layout_width="@dimen/how_it_works_text"
                    android:layout_height="wrap_content"
                    android:text="@string/raise_money_for_your_charity"/>
            </LinearLayout>
        </LinearLayout>

                <View
                    android:layout_marginRight="@dimen/aboutus_padding"
                    android:layout_marginLeft="@dimen/aboutus_padding"
                    android:layout_below="@id/acoutn_carity_icon"
                    android:background="@color/colorgray"
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />

        <TextView
            android:padding="@dimen/aboutus_padding"
            android:layout_margin="@dimen/aboutus_padding"
            android:gravity="center"
            android:layout_below="@+id/how_it_works"
            android:id="@+id/enter_charity_text"
            android:textColor="@color/colorbtn"
            android:textSize="@dimen/header_text_size"
