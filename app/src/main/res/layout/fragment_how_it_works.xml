            android:layout_margin="@dimen/aboutus_padding"
            android:weightSum="3"
            android:layout_below="@+id/charity_text"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="@dimen/how_it_works_cions"
                    android:layout_height="@dimen/how_it_works_cions"
                    android:background="@drawable/hit_4"/>
                <TextView
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/edt_hint_margin"
                    android:id="@+id/hit_text4"
                    android:textSize="@dimen/custom_txt_size"
                    android:textColor="@color/colorblack"
                    android:gravity="center"
                    android:layout_width="@dimen/how_it_works_text"
                    android:layout_height="wrap_content"
                    android:text="@string/download_winning_ticket_app"/>
            </LinearLayout>
            <ImageView
                android:layout_marginRight="@dimen/aboutus_padding"
                android:layout_gravity="center|top"
                android:layout_marginTop="@dimen/how_it_works_margin_top"
                android:layout_marginLeft="@dimen/aboutus_padding"
                android:background="@drawable/hit_arrow"
                android:layout_width="@dimen/arrow_icon"
                android:layout_height="@dimen/arrow_icon" />
            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="@dimen/how_it_works_cions"
                    android:layout_height="@dimen/how_it_works_cions"
                    android:background="@drawable/hit_5"/>
                <TextView
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/edt_hint_margin"
                    android:id="@+id/hit_text5"
                    android:textSize="@dimen/custom_txt_size"
                    android:textColor="@color/colorblack"
                    android:gravity="center"
                    android:layout_width="@dimen/how_it_works_text"
                    android:layout_height="wrap_content"
                    android:text="@string/create_event_code"/>
            </LinearLayout>
            <ImageView
                android:layout_marginRight="@dimen/aboutus_padding"
                android:layout_gravity="center|top"
                android:layout_marginTop="@dimen/how_it_works_margin_top"
                android:layout_marginLeft="@dimen/aboutus_padding"
                android:background="@drawable/hit_arrow"
                android:layout_width="@dimen/arrow_icon"
                android:layout_height="@dimen/arrow_icon" />

            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="@dimen/how_it_works_cions"
                    android:layout_height="@dimen/how_it_works_cions"
                    android:background="@drawable/hit_6"/>
                <TextView
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/edt_hint_margin"
                    android:id="@+id/hit_text6"
                    android:textSize="@dimen/custom_txt_size"
                    android:textColor="@color/colorblack"
                    android:gravity="center"
                    android:layout_width="@dimen/how_it_works_text"
                    android:layout_height="wrap_content"
                    android:text="@string/purchase_winning_ticket"/>
            </LinearLayout>
        </LinearLayout>

                <View
                    android:layout_marginRight="@dimen/aboutus_padding"
                    android:layout_marginLeft="@dimen/aboutus_padding"
                    android:layout_below="@id/acoutn_carity_icon"
                    android:background="@color/colorgray"
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />

        <TextView
            android:padding="@dimen/aboutus_padding"
            android:layout_margin="@dimen/aboutus_padding"
            android:gravity="center"
            android:layout_below="@+id/how_it_works"
            android:id="@+id/sponsor_charity_text"
            android:textColor="@color/colorbtn"
            android:textSize="@dimen/header_text_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:id="@+id/sponsoar_carity_icon"
            android:layout_margin="@dimen/aboutus_padding"
            android:weightSum="3"
            android:layout_below="@+id/charity_text"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="@dimen/how_it_works_cions"
                    android:layout_height="@dimen/how_it_works_cions"
                    android:background="@drawable/hit_7"/>
                <TextView
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/edt_hint_margin"
                    android:id="@+id/hit_text7"
                    android:textSize="@dimen/custom_txt_size"
