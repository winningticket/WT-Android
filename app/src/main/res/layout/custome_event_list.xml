<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:weightSum="3"
        android:layout_margin="@dimen/aboutus_padding"
        android:gravity="top"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">
        <ImageView
            android:scaleType="fitXY"
            android:layout_margin="@dimen/aboutus_padding"
            android:layout_weight=".8"
            android:id="@+id/event_logo"
            android:src="@drawable/logo"
            android:layout_width="0dp"
            android:layout_height="@dimen/image_height" />
        <LinearLayout
            android:layout_marginTop="@dimen/edt_paddingleft"
            android:layout_weight="1.8"
            android:layout_marginLeft="@dimen/edt_paddingleft"
            android:orientation="vertical"
            android:layout_gravity="top"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/colorblack"
                android:id="@+id/evnt_name"
                android:textSize="@dimen/text_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:textColor="@color/colorblack"
                android:id="@+id/event_date"
                android:layout_marginTop="@dimen/aboutus_padding"
                android:textSize="@dimen/bottom_tab_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".4"
            android:orientation="vertical">
        <TextView
            android:layout_marginTop="@dimen/edt_paddingleft"
            android:textSize="@dimen/linear_medium"
            android:textColor="@color/fdfdf"
            android:id="@+id/event_status"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
            <LinearLayout
                android:visibility="gone"
                android:layout_marginTop="@dimen/small_text"
                android:background="@drawable/red_chat_count"
                android:layout_width="@dimen/medium_big_textsize"
                android:layout_height="@dimen/medium_big_textsize"
                android:layout_gravity="center"
                android:id="@+id/chart_count"
                android:layout_marginLeft="@dimen/aboutus_padding">
                <TextView
                    android:textSize="@dimen/linear_small"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/text_chart_count"
                    android:textColor="@color/colorwhite"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>