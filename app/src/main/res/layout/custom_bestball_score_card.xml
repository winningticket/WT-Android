<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_weight="7"
    android:id="@+id/layout_row"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_weight="6"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp">

            <TextView
                android:paddingTop="@dimen/edt_paddingleft"
                android:paddingBottom="@dimen/edt_paddingleft"
                android:textStyle="bold"
                android:id="@+id/serial_number"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textColor="@color/colorblack"
                android:textSize="@dimen/linear_medium"
                android:layout_weight="1"
                android:gravity="center" />

            <TextView
                android:paddingTop="@dimen/edt_paddingleft"
                android:paddingBottom="@dimen/edt_paddingleft"
                android:textStyle="bold"
                android:id="@+id/hole_number"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textColor="@color/colorblack"
                android:textSize="@dimen/linear_medium"
                android:layout_weight="1"
                android:gravity="center"/>


            <TextView
                android:id="@+id/distance1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textColor="@color/colorblack"
                android:textSize="@dimen/linear_medium"
                android:paddingTop="@dimen/edt_paddingleft"
                android:paddingBottom="@dimen/edt_paddingleft"
                android:layout_weight="1.4"
                android:gravity="center" />

            <TextView
                android:paddingTop="@dimen/edt_paddingleft"
                android:paddingBottom="@dimen/edt_paddingleft"
                android:id="@+id/distance"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textColor="@color/colorblack"
                android:textSize="@dimen/linear_medium"
                android:textStyle="bold"
                android:layout_weight="1"
                android:gravity="center" />

        <TextView
            android:clickable="false"
            android:id="@+id/distance2"
            android:layout_width="0dp"
            android:visibility="gone"
            android:layout_height="match_parent"
            android:textColor="@color/colorblack"
            android:textSize="@dimen/linear_medium"
            android:paddingTop="@dimen/edt_paddingleft"
            android:paddingBottom="@dimen/edt_paddingleft"
            android:layout_weight="1"
            android:gravity="center" />

            <TextView
                android:paddingTop="@dimen/edt_paddingleft"
                android:paddingBottom="@dimen/edt_paddingleft"
                android:id="@+id/distance3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textColor="@color/colorblack"
                android:textSize="@dimen/linear_medium"
                android:layout_weight="1"
                android:gravity="center" />

        <TextView
            android:id="@+id/edit_icon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="@color/colorlightplusgray"
            android:textSize="@dimen/header_text_size"
            android:paddingTop="@dimen/edt_paddingleft"
            android:paddingBottom="@dimen/edt_paddingleft"
            android:layout_weight=".6"
            android:gravity="center" />

    </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/all_player_user"
            android:weightSum="2"
            android:layout_marginTop="-5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/all_ply_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".334"
                android:background="@color/colorpaypalbtn"
                android:gravity="center"
                android:padding="@dimen/aboutus_padding"
                android:textColor="@color/colorwhite"
                android:textSize="@dimen/linear_medium"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/pla"
                android:paddingTop="@dimen/linear_small"
                android:orientation="vertical"
                android:layout_weight="1.67"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/lowest_score"
                    android:textColor="@color/colorbtn"
                    android:textSize="@dimen/linear_small"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lowest 2 score selected added together"/>

                <LinearLayout
                    android:weightSum="4"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:gravity="right"
                        android:layout_weight="2"
                        android:textSize="@dimen/linear_small"
                        android:textColor="@color/colorblack"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textAllCaps="true"
                        android:id="@+id/top_gross_Score"
                        android:text="@string/gross"
                        android:layout_marginLeft="-15dp"
                        android:gravity="center"
                        android:layout_weight=".7"
                        android:textSize="@dimen/linear_small"
                        android:textColor="@color/colorblack"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textAllCaps="true"
                        android:id="@+id/top_net_score"
                        android:text="@string/net"
                        android:layout_marginLeft="-3dp"
                        android:gravity="center"
                        android:layout_weight=".4"
                        android:textSize="@dimen/linear_small"
                        android:textColor="@color/colorblack"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/player_select_unselt"
                        android:gravity="left"
                        android:layout_weight="0.9"
                        android:textSize="@dimen/linear_small"
                        android:textColor="@color/colorgreen"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:footerDividersEnabled="false"
                    android:divider="@null"
                    android:scrollbars="none"
                    android:id="@+id/team_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >
                </android.support.v7.widget.RecyclerView>

            </LinearLayout>
        </LinearLayout>
</LinearLayout>