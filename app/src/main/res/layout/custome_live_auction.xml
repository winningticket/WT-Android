<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/coordinatorLayout"
    android:orientation="horizontal"
    android:background="@color/colorwhite"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

         <ImageView
             android:layout_margin="@dimen/aboutus_padding"
             android:src="@drawable/logo"
            android:padding="@dimen/edt_paddingleft"
            android:background="@drawable/auction_item_background"
            android:scaleType="fitXY"
            android:layout_gravity="center"
            android:id="@+id/live_auction_image"
            android:layout_width="@dimen/live_auction_width"
            android:layout_height="@dimen/live_auction_width" />

    <LinearLayout
        android:layout_margin="@dimen/aboutus_padding"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:paddingStart="@dimen/edt_textsize"
            android:paddingEnd="@dimen/edt_textsize"
            android:background="@drawable/live_auction_item_number_bg"
            android:id="@+id/tv_item_number"
            android:textColor="@color/colorwhite"
            android:textSize="@dimen/linear_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/live_auction_title"
            android:textColor="@color/colorblack"
            android:textSize="@dimen/header_text_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Ends 12/22/19 @ 10:15PM EST"
            android:textColor="@color/colorblack"
             android:textSize="@dimen/linear_medium"
            android:id="@+id/tv_item_date_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_marginTop="@dimen/aboutus_padding"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_weight="1"
                android:id="@+id/live_auction_amount"
                android:gravity="start"
                android:textColor="@color/colorbtn"
                android:textSize="@dimen/linear_medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_weight="1"
                android:id="@+id/live_auction_bidding"
                android:gravity="start"
                android:textColor="@color/buy_it_now"
                android:textSize="@dimen/linear_medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
