<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_weight="7"
    android:id="@+id/layout_row"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
            android:layout_weight="7"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                android:paddingTop="@dimen/edt_paddingleft"
                android:paddingBottom="@dimen/edt_paddingleft"
                android:background="@color/colorpaypalbtn"
                android:textStyle="bold"
                android:id="@+id/serial_number"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textColor="@color/colorwhite"
                android:textSize="@dimen/linear_medium"
                android:layout_weight="1"
                android:gravity="center" />

            <TextView
                android:paddingTop="@dimen/edt_paddingleft"
                android:paddingBottom="@dimen/edt_paddingleft"
                android:textStyle="bold"
                android:id="@+id/hole_number"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textColor="@color/colorblack"
                android:textSize="@dimen/linear_medium"
                android:layout_weight="1"
                android:gravity="center"/>


            <TextView
                android:id="@+id/distance1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textColor="@color/colorblack"
                android:textSize="@dimen/linear_medium"
                android:paddingTop="@dimen/edt_paddingleft"
                android:paddingBottom="@dimen/edt_paddingleft"
                android:layout_weight="1.4"
                android:gravity="center" />

        <TextView
            android:id="@+id/distance"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="@color/colorblack"
            android:textSize="@dimen/linear_medium"
            android:textStyle="bold"
            android:paddingTop="@dimen/edt_paddingleft"
            android:paddingBottom="@dimen/edt_paddingleft"
            android:layout_weight="1"
            android:gravity="center" />

            <TextView
                android:clickable="false"
                android:id="@+id/distance2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textColor="@color/colorblack"
                android:textSize="@dimen/linear_medium"
                android:paddingTop="@dimen/edt_paddingleft"
                android:paddingBottom="@dimen/edt_paddingleft"
                android:layout_weight="1"
                android:gravity="center" />

            <TextView
                android:id="@+id/distance3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textColor="@color/colorblack"
                android:textSize="@dimen/linear_medium"
                android:paddingTop="@dimen/edt_paddingleft"
                android:paddingBottom="@dimen/edt_paddingleft"
                android:layout_weight="1"
                android:gravity="center" />

        <TextView
            android:id="@+id/edit_icon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="@color/colorlightplusgray"
            android:textSize="@dimen/header_text_size"
            android:paddingTop="@dimen/edt_paddingleft"
            android:paddingBottom="@dimen/edt_paddingleft"
            android:layout_weight=".6"
            android:gravity="center" />


        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/all_player_user"
            android:weightSum="2"
            android:layout_marginTop="-5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/all_ply_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".286"
                android:background="@color/colorpaypalbtn"
                android:gravity="center"
                android:padding="@dimen/aboutus_padding"
                android:textColor="@color/colorwhite"
                android:textSize="@dimen/linear_medium"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/pla"
                android:paddingTop="@dimen/linear_small"
                android:orientation="vertical"
                android:layout_weight="1.6"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/lowest_score"
                    android:textColor="@color/colorbtn"
                    android:textSize="@dimen/linear_small"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <android.support.v7.widget.RecyclerView
                    android:divider="@null"
                    android:scrollbars="none"
                    android:id="@+id/team_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >
                </android.support.v7.widget.RecyclerView>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>