<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/colorblack"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center"
        android:id="@+id/backtouch"
        android:layout_width="@dimen/header_back_btn_height"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center"
            android:background="@drawable/cross"
            android:id="@+id/cancel_purchage"
            android:layout_margin="@dimen/txt_margin_lr"
            android:textColor="@color/colorwhite"
            android:layout_width="@dimen/header_back_btn_txt_size"
            android:layout_height="@dimen/header_back_btn_txt_size" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

    <LinearLayout
        android:id="@+id/scramble_type"
        android:background="@color/colorblack"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="@dimen/image_width"
            android:layout_marginTop="@dimen/small_text"
            android:layout_height="@dimen/select_image_width"
            android:background="@drawable/logo"/>

        <TextView
            android:id="@+id/tv_scoring_gps"
            android:gravity="center"
            android:textColor="@color/colorwhite"
            android:textSize="@dimen/big_text_size"
            android:text="@string/live_scoring_gps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_score_card_leaderboard"
            android:gravity="center"
            android:textColor="@color/colorwhite"
            android:textSize="@dimen/linear_medium"
            android:text="ScoreCard and LeaderBoard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_marginTop="@dimen/layout_mrgn_leftright"
            android:padding="@dimen/aboutus_padding"
            android:layout_marginLeft="@dimen/medium_big_textsize"
            android:layout_marginRight="@dimen/medium_big_textsize"
            android:orientation="vertical"
            android:background="@color/live_scoiring"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textAllCaps="true"
                android:id="@+id/tv_event_name"
                android:gravity="center"
                android:textColor="@color/colorwhite"
                android:textSize="@dimen/text_size"
                android:text="@string/event_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_event_values"
                android:gravity="center"
                android:textColor="@color/colorwhite"
                android:textSize="@dimen/linear_medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <LinearLayout
            android:padding="@dimen/aboutus_padding"
            android:layout_marginTop="@dimen/aboutus_padding"
            android:layout_marginLeft="@dimen/medium_big_textsize"
            android:layout_marginRight="@dimen/medium_big_textsize"
            android:orientation="vertical"
            android:background="@color/live_scoiring"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textAllCaps="true"
                android:id="@+id/tv_event_location"
                android:gravity="center"
                android:textColor="@color/colorwhite"
                android:textSize="@dimen/text_size"
                android:text="@string/event_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_event_location_values"
                android:gravity="center"
                android:textColor="@color/colorwhite"
                android:textSize="@dimen/linear_medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:padding="@dimen/aboutus_padding"
            android:layout_marginTop="@dimen/aboutus_padding"
            android:layout_marginLeft="@dimen/medium_big_textsize"
            android:layout_marginRight="@dimen/medium_big_textsize"
            android:orientation="vertical"
            android:background="@color/live_scoiring"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_event_type"
                android:gravity="center"
                android:textColor="@color/colorwhite"
                android:textSize="@dimen/text_size"
                android:text="@string/game_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_event_type_values"
                android:gravity="center"
                android:textColor="@color/colorwhite"
                android:textSize="@dimen/linear_medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <LinearLayout
            android:padding="@dimen/aboutus_padding"
            android:layout_marginTop="@dimen/aboutus_padding"
            android:layout_marginLeft="@dimen/medium_big_textsize"
            android:layout_marginRight="@dimen/medium_big_textsize"
            android:orientation="vertical"
            android:background="@color/live_scoiring"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_event_decript"
                android:gravity="center"
                android:textColor="@color/colorwhite"
                android:textSize="@dimen/text_size"
                android:text="@string/game_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_event_dcpt_values"
                android:gravity="center"
                android:textColor="@color/colorwhite"
                android:textSize="@dimen/linear_medium"
                android:text="All member tee off and play the best ball.The team will enter one score for whole team.Handicap Disebled during this game type."
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_start_play"
            android:text="@string/start_playing"
            android:background="@color/btn_color"
            android:textSize="@dimen/text_size"
            android:layout_marginBottom="@dimen/_10sdp"
            android:textColor="@color/colorwhite"
            android:layout_marginTop="@dimen/text_size"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height" />
    </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>