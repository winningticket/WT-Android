<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    app:cardBackgroundColor="@color/colorwhite"
    app:cardCornerRadius="@dimen/aboutus_padding"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/coordinatorLayout"
    android:layout_width="@dimen/virtula_gift_width"
    android:layout_marginRight="@dimen/margin_top_order"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/row_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorwhite"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/vg_image"
            android:layout_width="@dimen/logo_icon_hight"
            android:layout_height="@dimen/logo_icon_width"
            android:layout_gravity="center|left"
            android:layout_margin="@dimen/aboutus_padding" />

        <TableRow
            android:id="@+id/table_row"
            android:layout_width="200dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/layout_event_date"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center|left"
                android:gravity="center|left"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_course_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:gravity="left|center"
                    android:textColor="@color/colorblack"
                    android:textSize="@dimen/linear_medium" />

                <TextView
                    android:id="@+id/text_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:gravity="left|center"
                    android:textColor="@color/colorblack"
                    android:textSize="@dimen/linear_small" />
            </LinearLayout>
        </TableRow>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="@dimen/button_margin"
            android:layout_gravity="center"
            android:background="@drawable/tringle" />
    </LinearLayout>
</android.support.v7.widget.CardView>