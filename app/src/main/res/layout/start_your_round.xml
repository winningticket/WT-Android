<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <LinearLayout
            android:padding="@dimen/header_text_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/services">
            <ImageView
                android:layout_width="@dimen/view_item_width"
                android:layout_height="@dimen/_50sdp"
                android:background="@drawable/logo"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_round_title"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="@string/start_a_new_round"
                android:textColor="@color/colorblack"
                android:textAlignment="center"
                android:textSize="@dimen/header_text_size"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_info"
                android:text="@string/use_course_locator"
                android:textAlignment="center"
                android:layout_marginTop="@dimen/aboutus_padding"
                android:textSize="@dimen/text_size"/>

            <Button
                android:textSize="@dimen/text_size"
                android:stateListAnimator="@null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/continuess"
                android:id="@+id/btn_countinue"
                android:textColor="@color/colorwhite"
                android:background="@drawable/button_backgound"
                android:layout_marginLeft="@dimen/mar_left_fifthyt"
                android:layout_marginRight="@dimen/mar_left_fifthyt"
                android:layout_marginTop="@dimen/edt_marg_right"
                android:layout_marginBottom="@dimen/aboutus_padding"/>

            <TextView
                android:textSize="@dimen/text_size"
                android:stateListAnimator="@null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cancel"
                android:id="@+id/btn_cancel"
                android:gravity="center"
                android:textColor="@color/black"
                android:layout_marginLeft="@dimen/mar_left_fifthyt"
                android:layout_marginRight="@dimen/mar_left_fifthyt"
                android:layout_marginTop="@dimen/edt_marg_right"
                android:layout_marginBottom="@dimen/aboutus_padding"/>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>