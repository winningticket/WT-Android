<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:padding="@dimen/aboutus_padding"
    android:layout_margin="@dimen/aboutus_padding"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/coordinatorLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/services">

        <ImageView
            android:id="@+id/img_cross"
            android:layout_margin="@dimen/ss_text"
            android:layout_gravity="end|center"
            android:src="@drawable/cross_black"
            android:layout_width="@dimen/linear_medium"
            android:layout_height="@dimen/linear_medium"/>

        <TextView
            android:layout_margin="@dimen/aboutus_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/location_services"
            android:text="@string/view_your_complete"
            android:textColor="@color/colorblack"
            android:textAlignment="center"
            android:textSize="@dimen/text_size"/>


        <TextView
            android:layout_margin="@dimen/aboutus_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nearby_courses"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/aboutus_padding"
            android:textSize="@dimen/linear_medium"/>


        <Button
           android:layout_gravity="center"
            android:textSize="@dimen/text_size"
            android:stateListAnimator="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/continuess"
            android:id="@+id/btn_reminder_countinue"
            android:textColor="@color/colorwhite"
            android:background="@drawable/new_bottom_bg"
            android:layout_marginStart="@dimen/header_text_size"
            android:layout_marginEnd="@dimen/header_text_size"
            android:layout_marginTop="@dimen/edt_marg_right"
            android:layout_marginBottom="@dimen/aboutus_padding"/>

        <Button
            android:visibility="gone"
            android:stateListAnimator="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/be_write_back"
            android:id="@+id/btn_be_right_back"
            android:textSize="@dimen/text_size"
            android:textColor="@color/colorwhite"
            android:background="@drawable/new_bottom_bg"
            android:layout_marginStart="@dimen/header_text_size"
            android:layout_marginEnd="@dimen/header_text_size"
            android:layout_marginTop="@dimen/edt_marg_right"
            android:layout_marginBottom="@dimen/aboutus_padding" />

        <Button
            android:visibility="gone"
            android:stateListAnimator="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/finish_game_btn"
            android:id="@+id/enable"
            android:textSize="@dimen/text_size"
            android:textColor="@color/colorwhite"
            android:background="@drawable/new_bottom_bg"
            android:layout_marginStart="@dimen/header_text_size"
            android:layout_marginEnd="@dimen/header_text_size"
            android:layout_marginTop="@dimen/edt_marg_right"
            android:layout_marginBottom="@dimen/edt_paddingleft" />

    </LinearLayout>
</RelativeLayout>
