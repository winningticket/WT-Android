<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:paddingTop="@dimen/aboutus_padding"
    android:background="@color/colorbackgrounty"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
       <LinearLayout
           android:background="@color/colorwhite"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

           <LinearLayout
               android:layout_marginLeft="@dimen/aboutus_padding"
               android:layout_weight="1.5"
               android:orientation="vertical"
               android:layout_width="0dp"
               android:layout_height="match_parent">
               <TextView
                   android:id="@+id/course_date"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center|left"
                   android:text="18-10-2018"
                   android:textColor="@color/colorblack"
                   android:textSize="@dimen/text_size" />

               <TextView
                   android:layout_width="match_parent"
                   android:id="@+id/course_name"
                   android:layout_gravity="center|left"
                   android:textColor="@color/colorgray"
                   android:textSize="@dimen/text_size"
                   android:text="(Wildhorse-Mustang) - Wildhorse Golf Club at Robson Ranch"
                   android:layout_height="wrap_content" />

               <TextView
                   android:layout_width="match_parent"
                   android:id="@+id/course_score"
                   android:layout_gravity="center|left"
                   android:textColor="@color/colorgray"
                   android:textSize="@dimen/text_size"
                   android:text="Net Score 70/72"
                   android:layout_height="wrap_content" />
           </LinearLayout>

           <LinearLayout
               android:gravity="center"
               android:layout_weight=".5"
               android:orientation="vertical"
               android:layout_width="0dp"
               android:layout_height="match_parent">
               <TextView
                   android:gravity="center"
                   android:layout_width="match_parent"
                   android:id="@+id/to_par_values"
                   android:textColor="@color/colorblack"
                   android:textSize="@dimen/big_text_size"
                   android:text="+2"
                   android:layout_height="wrap_content" />
               <TextView
                   android:gravity="center"
                   android:layout_width="match_parent"
                   android:id="@+id/to_par_text"
                   android:textColor="@color/colorgray"
                   android:textSize="@dimen/linear_small"
                   android:text="@string/to_par"
                   android:layout_height="wrap_content" />
           </LinearLayout>
        </LinearLayout>
</android.support.constraint.ConstraintLayout>