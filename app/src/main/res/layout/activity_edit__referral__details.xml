<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:id="@+id/referral_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    tools:context="com.winningticketproject.in.AffiliatorModel.Edit_Referral_Details">


    <include
        android:id="@+id/edit_referal_detials"
        layout="@layout/custome_profile_toolbarpage" />

<LinearLayout
    android:layout_margin="@dimen/edt_marg_right"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_referral_name"
        android:layout_margin="@dimen/aboutus_padding"
        android:paddingTop="@dimen/edt_hint_padingsstop"
        android:paddingLeft="@dimen/edt_hint_padingleft"
        android:theme="@style/TextLabel"
        android:background="@drawable/editext_acountprofile"
        android:textColorHint="@color/colorblack"
        android:layout_width="match_parent"
        android:layout_height="@dimen/edt_hint_height">

        <EditText
            android:gravity="start"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
            android:id="@+id/refferal_name"
            android:hint="@string/referral_name"
            android:maxLength="30"
            android:layout_gravity="center"
            android:textColor="@color/colorblack"
            android:textSize="@dimen/edt_textsize"
            android:paddingLeft="@dimen/edt_paddingleft"
            android:layout_marginRight="@dimen/edt_marg_right"
            android:background="@null"
            android:textColorHint="@color/colorblack"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edt_height"/>

    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout

        android:id="@+id/text_Referral_email"
        android:layout_margin="@dimen/edt_hint_margin"
        android:paddingTop="@dimen/edt_hint_padingsstop"
        android:paddingLeft="@dimen/edt_hint_padingleft"
        android:theme="@style/TextLabel"
        android:background="@drawable/editext_acountprofile"
        android:textColorHint="@color/colorblack"
        android:layout_width="match_parent"
        android:layout_height="@dimen/edt_hint_height">

        <EditText
            android:editable="false"
            android:focusable="false"
            android:id="@+id/text_refferal_mail"
            android:hint="@string/referral_email"
            android:gravity="start"
            android:maxLength="30"
            android:layout_gravity="center"
            android:textColor="@color/colorblack"
            android:textSize="@dimen/edt_textsize"
            android:paddingLeft="@dimen/edt_paddingleft"
            android:layout_marginRight="@dimen/edt_marg_right"
            android:background="@null"
            android:textColorHint="@color/colorblack"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edt_height"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout

        android:id="@+id/text_refferal_phone_numbr"
        android:layout_margin="@dimen/edt_hint_margin"
        android:paddingTop="@dimen/edt_hint_padingsstop"
        android:paddingLeft="@dimen/edt_hint_padingleft"
        android:theme="@style/TextLabel"
        android:background="@drawable/editext_acountprofile"
        android:textColorHint="@color/colorblack"
        android:layout_width="match_parent"
        android:layout_height="@dimen/edt_hint_height">

        <EditText
            android:gravity="start"

            android:digits="0123456789+-() "
            android:maxLength="15"
            android:id="@+id/text_Referral_phone_no"
            android:hint="@string/referral_phone_number"
            android:layout_gravity="center"
            android:textColor="@color/colorblack"
            android:textSize="@dimen/edt_textsize"
            android:paddingLeft="@dimen/edt_paddingleft"
            android:layout_marginRight="@dimen/edt_marg_right"
            android:background="@null"
            android:textColorHint="@color/colorblack"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edt_height"/>

    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout

        android:id="@+id/text_Referral_role_type"
        android:layout_margin="@dimen/edt_hint_margin"
        android:paddingTop="@dimen/edt_hint_padingsstop"
        android:paddingLeft="@dimen/edt_hint_padingleft"
        android:theme="@style/TextLabel"
        android:background="@drawable/editext_acountprofile"
        android:textColorHint="@color/colorblack"
        android:layout_width="match_parent"
        android:layout_height="@dimen/edt_hint_height">

        <EditText
            android:gravity="start"
            android:editable="false"
            android:focusable="false"
            android:id="@+id/text_refferal_role"
            android:hint="@string/user_role"
            android:maxLength="30"
            android:layout_gravity="center"
            android:textColor="@color/colorblack"
            android:textSize="@dimen/edt_textsize"
            android:paddingLeft="@dimen/edt_paddingleft"
            android:layout_marginRight="@dimen/edt_marg_right"
            android:background="@null"
            android:textColorHint="@color/colorblack"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edt_height"/>

    </android.support.design.widget.TextInputLayout>




    <LinearLayout
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:stateListAnimator="@null"
            android:id="@+id/canacel_button"
            android:layout_marginRight="@dimen/layout_difference_mrgn_top"
            android:textSize="@dimen/btn_txt_size"
            android:textStyle="bold"
            android:textColor="@color/colorwhite"
            android:background="@drawable/gray_button_bacgound"
            android:text="@string/cancel"
            android:layout_weight=".5"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_height" />



        <Button
            android:stateListAnimator="@null"
            android:id="@+id/update_referral"
            android:layout_marginLeft="@dimen/layout_difference_mrgn_top"
            android:textSize="@dimen/btn_txt_size"
            android:textStyle="bold"
            android:textColor="@color/colorwhite"
            android:background="@drawable/button_backgound"
            android:text="@string/update_referral"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_height" />

    </LinearLayout>
</LinearLayout>
</LinearLayout>
</android.support.design.widget.CoordinatorLayout>